{
  "deno.enable": true,
  "deno.lint": true,
  "editor.defaultFormatter": "denoland.vscode-deno",
  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "css.customData": [
    ".vscode/tailwind.json"
  ],
  "cSpell.words": [
    "apidoc",
    "asynciterable",
    "dotenv",
    "kita",
    "kitsonk",
    "kubb"
  ],
  "editor.wordWrap": "off",
  "editor.stickyScroll.enabled": false,
  "editor.cursorStyle": "block",
  "explorer.excludeGitIgnore": true
}
